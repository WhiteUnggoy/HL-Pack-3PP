  <thing id="raEMPClSce" name="Scent" description="You gain scent with a range of 5 feet. At character level 6th, the range of your scent increases to 30 feet." compset="RaceSpec" summary="Detect opponents within range by sense of smell." uniqueness="unique">
    <fieldval field="abRange" value="30"/>
    <usesource source="EMPBear" parent="pEMPAnimal" name="Clan of the Bear"/>
    <tag group="HasAbility" tag="xScent" name="Scent" abbrev="Scent"/>
    <tag group="Helper" tag="ShowSpec" name="Show Spec" abbrev="Show Spec"/>
    <tag group="LvNamePar" tag="IncRange" name="Include Range text" abbrev="Include Range text"/>
    <tag group="SbNamePar" tag="IncRange" name="Include Range text" abbrev="Include Range text"/>
    <tag group="SpecType" tag="Sense" name="Sense" abbrev="Sense"/>
    <tag group="Universal" tag="Universal" name="Universal Monster Ability or Core Rulebook ability" abbrev="Universal Monster Ability or Core Rulebook ability"/>
    <tag group="abRange" tag="Feet" name="Feet" abbrev="ft."/>
    <tag group="AbilType" tag="Extra" name="Extraordinary Ability" abbrev=" (Ex)"/>
    <tag group="DescInfo" tag="xScent" name="Scent" abbrev="Scent"/>
    <bootstrap thing="aaScent"></bootstrap>
    <eval phase="UserFinal" priority="10000">~ do nothing unless we’re less than 6th level
      doneif (#totallevelcount[] &gt;= 6)

      ~ else, edit text to reflect 5 foot range.
      field[abRange].value = 5</eval>
    </thing>
