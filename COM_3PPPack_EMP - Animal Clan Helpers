    <usesource source="EMPRaptor"/>
    <eval phase="UserPostLv" priority="1000"><![CDATA[      doneif (#totallevelcount[] < 10)
      hero.child[ArmorClass].field[tACNatural].value += 1]]></eval>
    </thing>
