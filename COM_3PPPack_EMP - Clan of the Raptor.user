  <thing id="rcEMPRapRD" name="Raptor&apos;s Dive" description="When making a charge attack, you deal double damage if you were 10 or more feet above the target of your charge attack when you began your charge." compset="RaceCustom" summary="Double damage when your charge starts 10 ft. above target." uniqueness="useronce">
    <usesource source="EMPRaptor"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="AllowRCust" tag="cfgEMPRapO"/>
    <tag group="Helper" tag="NoPathSoc"/>
    <tag group="AllowRCust" tag="cfgEMPRapR"/>
    <exprreq message="Avid Shapechanger racial trait required."><![CDATA[#hasability[rcEMPRapAS] <> 0]]></exprreq>
    <exprreq message="Improved Bite racial trait required."><![CDATA[#hasability[rcEMPRapIB] <> 0]]></exprreq>
    <exprreq message="Talons racial trait required."><![CDATA[#hasability[rcEMPRapTa] <> 0]]></exprreq>
    <prereq message="Stealthy Flight racial trait required.">
      <validate><![CDATA[      ~Applies to Owls only, so valid otherwise
      validif (#hasability[rcEMPRapOC] = 0)

      ~Valid if we have Stealthy Flight
      validif (#hasability[rcEMPRapSt] <> 0)]]></validate>
      </prereq>
    <prereq message="Superior Flight racial trait required.">
      <validate><![CDATA[      ~Applies to Hawks and Eagles only, so valid otherwise
      validif (#hasability[rcEMPRapEC] + #hasability[rcEMPRapHC] = 0)

      ~Valid if we have Superior Flight
      validif (#hasability[rcEMPRapSu] <> 0)]]></validate>
      </prereq>
    </thing>
  <thing id="rcEMPRapTS" name="True Shapechanger" description="You can use your change shape racial trait any number of times per day, and can remain in your bird form indefinitely." compset="RaceCustom" summary="Change shape as long and as often as you want." uniqueness="useronce">
    <usesource source="EMPRaptor"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="AllowRCust" tag="cfgEMPRapO"/>
    <tag group="AllowRCust" tag="cfgEMPRapV"/>
    <tag group="AllowRCust" tag="cfgEMPRapR"/>
    <tag group="Helper" tag="NoPathSoc"/>
    <eval phase="First" priority="600"><![CDATA[      ~ If we're not enabled get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ Find Change Shape
      perform hero.childfound[raEMPRapCS].setfocus
      doneif (state.isfocus = 0)

      ~ Increase usage to at-will, and duration becomes unlimited

      perform focus.field[trkMax].reset
      perform focus.delete[abDuration.Minute]
      perform focus.delete[abDuration.Hour]
      perform focus.delete[Usage.Day]
      perform focus.assign[Usage.AtWill]

      #appenddesc[raEMPRapCS,"{b}Addition from True Shapechanger:{/b}\nYou can use your change shape racial trait any number of times per day, and can remain in your bird form indefinitely."]]]></eval>
    <eval phase="UserPostLv" priority="1500" index="2"><![CDATA[      ~ If we're not enabled get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ Find Change Shape
      perform hero.childfound[raEMPRapCS].setfocus
      doneif (state.isfocus = 0)

      ~ Duration becomes unlimited
      perform focus.field[abDuration].reset]]></eval>
    <exprreq message="Improved Bite racial trait required."><![CDATA[#hasability[rcEMPRapIB] <> 0]]></exprreq>
    <exprreq message="Talons racial trait required."><![CDATA[#hasability[rcEMPRapTa] <> 0]]></exprreq>
    <exprreq message="Avid Shapechanger racial trait required."><![CDATA[#hasability[rcEMPRapAS] <> 0]]></exprreq>
    <prereq message="Scent racial trait required.">
      <validate><![CDATA[      ~Applies to Vultures only, so valid otherwise
      validif (#hasability[rcEMPRapVC] = 0)

      ~Valid if we have Scent
      validif (#hasability[rcEMPRapSc] <> 0)]]></validate>
      </prereq>
    <prereq message="Stealthy Flight racial trait required.">
      <validate><![CDATA[      ~Applies to Owls only, so valid otherwise
      validif (#hasability[rcEMPRapOC] = 0)

      ~Valid if we have Scent
      validif (#hasability[rcEMPRapSt] <> 0)]]></validate>
      </prereq>
    <prereq message="Superior Flight racial trait required.">
      <validate><![CDATA[      ~Applies to Hawks and Eagles only, so valid otherwise
      validif (#hasability[rcEMPRapEC] + #hasability[rcEMPRapHC] = 0)

      ~Valid if we have Superior Flight
      validif (#hasability[rcEMPRapSu] <> 0)]]></validate>
      </prereq>
    </thing>
  <thing id="rcEMPRapSu" name="Superior Flight" description="The fly speed you gain when using your change shape racial trait increases by 20 feet." compset="RaceCustom" summary="Increase fly speed for change shape by 20 ft." uniqueness="useronce">
