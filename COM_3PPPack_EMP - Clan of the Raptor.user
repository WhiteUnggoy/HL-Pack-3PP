  <thing id="rcEMPRapAS" name="Avid Shapechanger" description="You can use your change shape racial trait up to three times per day, and can remain in bird form for up to 1 hour per character level each time." compset="RaceCustom" summary="Improve change shape to 3/day, 1 hour/level." uniqueness="useronce">
    <usesource source="EMPRaptor"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="AllowRCust" tag="cfgEMPRapO"/>
    <tag group="AllowRCust" tag="cfgEMPRapV"/>
    <tag group="Helper" tag="NoPathSoc"/>
    <tag group="AllowRCust" tag="cfgEMPRapR"/>
    <eval phase="First" priority="500">~ If we&apos;re not enabled get out now
      doneif (tagis[Helper.SpcDisable] &lt;&gt; 0)

      ~ If we have True Shapechanger, and it’s not disabled, get out

      perform hero.childfound[rcEMPRapTS].setfocus
      if (state.isfocus &lt;&gt; 0) then
        doneif (focus.tagis[Helper.SpcDisable] = 0)
        endif

      perform state.clearfocus

      ~ Find Change Shape
      perform hero.childfound[raEMPRapCS].setfocus
      doneif (state.isfocus = 0)

      ~ Increase usage to 3, and change duration from minutes to hours
      focus.field[trkMax].value += 2
      perform focus.delete[abDuration.Minute]
      perform focus.assign[abDuration.Hour]

      #appenddesc[raEMPRapCS,&quot;{b}Addition from Avid Shapechanger:{/b}\nYou can use your change shape racial trait up to three times per day, and can remain in bird form for up to 1 hour per character level each time.&quot;]</eval>
    </thing>
  <thing id="rcEMPRapIB" name="Improved Bite" description="The damage dealt by your bite attack increases to 1d6 if you are Medium, 1d4 if you are Small." compset="RaceCustom" summary="The damage dealt by your bite attack increases." uniqueness="useronce">
