  <thing id="rcEMPRapMe" name="Medium Size" description="+2 Dexterity, –2 Strength. You receive no other bonuses or penalties due to size." compset="RaceCustom" uniqueness="useronce">
    <usesource source="EMPRaptor"/>
    <tag group="Helper" tag="Secondary"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="Helper" tag="NoPathSoc"/>
    <tag group="AllowRCust" tag="rEMPRaptCl"/>
    <eval phase="First" priority="200"><![CDATA[
      ~ If we're not enabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ Find our race, and set ability scores
      perform hero.findchild[BaseRace].setfocus
      doneif (state.isfocus = 0)

      focus.field[rSTR].value -= 2
      focus.field[rDEX].value += 2

      ~ Set Height & Weight info
      focus.field[rHeightMnF].value = 50
      focus.field[rHeightMnM].value = 48
      focus.field[rWeightMnF].value = 75
      focus.field[rWeightMnM].value = 55

      perform focus.assign[HeightSize.6]
      perform focus.assign[WeightMult.5]]]></eval>
    </thing>
  <thing id="rcEMPRapSm" name="Small Size" description="+2 Dexterity, –2 Strength. You gain a +1 size bonus to Armor Class, a +1 size bonus to attack rolls, a –1 penalty to your Combat Maneuver Bonus and Combat Maneuver Defense due to size, and a +4 size bonus on Stealth checks." compset="RaceCustom" uniqueness="useronce">
    <usesource source="EMPRaptor"/>
    <tag group="Helper" tag="Secondary"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="Helper" tag="NoPathSoc"/>
    <tag group="AllowRCust" tag="rEMPRaptCl"/>
    <eval phase="First" priority="200"><![CDATA[
      ~ If we're not enabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      perform hero.findchild[BaseRace].setfocus
      doneif (state.isfocus = 0)

      focus.field[rSpeed].value -= 10
      focus.field[rSTR].value -= 2
      focus.field[rDEX].value += 2

      ~ Set Height & Weight info
      focus.field[rHeightMnF].value = 28
      focus.field[rHeightMnM].value = 24
      focus.field[rWeightMnF].value = 30
      focus.field[rWeightMnM].value = 23

      perform focus.assign[WeightMult.1]

      if (hero.tagis[Hero.Female] <> 0) then
        perform focus.assign[HeightSize.10]

      elseif (hero.tagis[Hero.Male] <> 0) then
        perform focus.assign[HeightSize.12]
        endif]]></eval>
    <eval phase="First" priority="20000" index="2"><![CDATA[
      ~ If we're not enabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      var sizemod as number
      sizemod = -1
      call SizeChange]]></eval>
    </thing>
  <thing id="rcEMPRapEC" name="Eagle Clan" description="Members of your clan resemble eagles when using their change shape ability. You gain a +2 racial bonus to Charisma, and treat all instances of “lawful good” in the paladin class description as if they read “chaotic good,” instead. Whenever you could select a mercy with the paladin&apos;s mercy class feature, you may instead choose to gain the Raptor Clan Heritage feat as a bonus feat." compset="RaceCustom" summary="Appear as an eagle when you shapechange, gain heritage as CG Paladin." uniqueness="useronce">
    <usesource source="EMPRaptor"/>
    <tag group="AllowRCust" tag="rEMPRaptCl"/>
    <tag group="Helper" tag="NoPathSoc"/>
    <eval phase="First" priority="200"><![CDATA[
      ~ If we're not enabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ Find the race, change name and we get +2 CHA
      perform hero.findchild[BaseRace].setfocus
      doneif (state.isfocus = 0)

      focus.field[livename].text = field[thingname].text
      focus.field[rCHA].value += 2

      perform state.clearfocus

      ~ Find the paladin class, if any, and change alignment prereqs
      perform hero.childfound[cHelpPal].setfocus
      doneif (state.isfocus = 0)

      perform focus.delete[AlgnReq.LawGood]
      perform focus.assign[AlgnReq.ChaotGood]]]></eval>
    </thing>
  <thing id="cPalEMPRap" name="Feat (Raptor Clan Heritage)" description="Gain Raptor Clan Heritage as a bonus feat." compset="CustomSpec">
    <tag group="SpecSource" tag="cHelpPal" name="Paladin" abbrev="Paladin"/>
    <tag group="abCategory" tag="PalMercy" name="Paladin Mercy" abbrev="Paladin Mercy"/>
    <tag group="DescInfo" tag="fEMPRapRCH"/>
    <tag group="Helper" tag="SpecUp"/>
    <bootstrap thing="fEMPRapRCH"></bootstrap>
    <exprreq message="Raptor Clan race required."><![CDATA[#hasrace[rEMPRaptCl] <> 0]]></exprreq>
    <exprreq message="Eagle Clan heritage required."><![CDATA[#hasability[rcEMPRapEC] <> 0]]></exprreq>
    <prereq message="May only be taken once, plus once per two character levels.">
      <validate><![CDATA[      ~Valid when taken at 1st, 2nd, 4th, 6th, 8th, and 10th level

      if (@ispick <> 0) then

        validif ( (hero.tagcount[HasFeat.fEMPRapRCH] - 1) <= round(#totallevelcount[]/2, 0, -1) )

      else

        validif (hero.tagcount[HasFeat.fEMPRapRCH] <= round(#totallevelcount[]/2, 0, -1) )
        endif]]></validate>
      </prereq>
    <prereq message="May be taken no more than six times.">
      <validate><![CDATA[      ~Valid up to six times

      if (@ispick <> 0) then
        validif (hero.tagcount[HasFeat.fEMPRapRCH] <= 6)

      else
        validif (hero.tagcount[HasFeat.fEMPRapRCH] <= 5)
        endif]]></validate>
      </prereq>
    </thing>
  <thing id="raEMPRapNA" name="Natural Armor" description="You gain a +1 natural armor bonus. At character level 10th, this bonus increases to +2." compset="RaceSpec">
    <usesource source="EMPRaptor"/>
    <eval phase="UserPostLv" priority="1000"><![CDATA[      doneif (#totallevelcount[] < 10)
      hero.child[ArmorClass].field[tACNatural].value += 1]]></eval>
    </thing>
  <thing id="raEMPRapCS" name="Change Shape" description="Once per day as a standard action that does not provoke attacks of opportunity, you can assume the form of a bird of your size category. The appearance of your bird form is identical every time you use this ability. While in bird form, your base land speed is reduced to 10 feet but you gain a fly speed of 60 feet (average maneuverability). In bird form, you loose any natural weapons other than bite, talon, and wing attacks. Your other statistics are unchanged. You can remain in bird form for up to 1 minute per character level, but can resume your normal form as a standard action. You also resume your normal form if you die. This change shape ability is a polymorph effect (and thus causes your any gear on your person to meld with your body when you are in your bird form)." compset="RaceSpec" summary="Change into a bird of your size, resembling your clan." uniqueness="unique">
    <fieldval field="trkMax" value="1"/>
    <fieldval field="abValue" value="60"/>
    <usesource source="EMPRaptor"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="Usage" tag="Day"/>
    <tag group="User" tag="Activation"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="abDuration" tag="Minute"/>
    <tag group="LvNamePar" tag="IncDurati"/>
    <tag group="User" tag="Tracker"/>
    <eval phase="UserPostLv" priority="1000" index="3"><![CDATA[      ~ If we're not enabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ Duration is equal to 1 min./level
      field[abDuration].value = #totallevelcount[]]]></eval>
    <eval phase="First" priority="10000" index="2"><![CDATA[      ~ If we're not enabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ If we're not active, get out now
      doneif (field[abilActive].value = 0)

      ~ Apply the Fly speed
      hero.childfound[xFly].field[abValue].value = maximum(hero.childfound[xFly].field[abValue].value, field[abValue].value)]]></eval>
    <eval phase="First" priority="205"><![CDATA[      ~ If we're not enabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ If we're not active, get out now
      doneif (field[abilActive].value = 0)

      perform hero.findchild[BaseRace].setfocus
      doneif (state.isfocus = 0)

      focus.field[rSpeed].value = 10]]></eval>
    </thing>
  <thing id="cfgEMPRapR" name="Raptor Clan Heritage" compset="Configure" uniqueness="unique">
